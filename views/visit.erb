<script type="text/javascript">
  
  $(function() {
    $('#color').simplecolorpicker();
  });
  
</script>

<h2>Запись на стрижку</h2>

<form action="/visit" method="POST" class="form-horizontal">

<label for="inputEmail3" class="col-sm-2 control-label">Мастер:</label>
<div class="col-sm-10">
<select class="form-control" name='barber'>
  <option <%= @barber == 'Иванова Татьяна' ? 'selected' : '' %> >Иванова Татьяна</option>
  <option <%= @barber == 'Петрова Анна' ? 'selected' : '' %> >Петрова Анна</option>
  <option <%= @barber == 'Бульба Тарас' ? 'selected' : '' %> >Бульба Тарас</option>
</select>
</div>


  <div class="form-group">
    <label for="inputEmail3" class="col-sm-2 control-label">Ваше имя</label>
    <div class="col-sm-10">
      <input type="text" name='username' value="<%= @username %>" placeholder="Введите имя" autofocus class="form-control" id="inputEmail3">
    </div>
  </div>
  <div class="form-group">
    <label for="inputPassword3" class="col-sm-2 control-label">Ваш телефон</label>
    <div class="col-sm-10">
      <input type="text" name='phone' value="<%= @phone %>" class="form-control" id="inputPassword3" placeholder="8(999)999-99-99">
    </div>
    <div class="form-group">
      <label for="inputPassword3" class="col-sm-2 control-label">Время визита</label>
      <div class="col-sm-10">
        <input type="text" name='datetime' value="<%= @datetime %>" class="form-control" placeholder="Введите дату и время">
      </div>
    </div>

    <div class="form-group">
        <label for="inputPassword3" class="col-sm-2 control-label">Выберите цвет: </label>
          <select id="color" name='color'>
            <option value="#7bd148">Green</option>
            <option value="#5484ed">Bold blue</option>
            <option value="#a4bdfc">Blue</option>
            <option value="#46d6db">Turquoise</option>
            <option value="#7ae7bf">Light green</option>
            <option value="#51b749">Bold green</option>
            <option value="#fbd75b">Yellow</option>
            <option value="#ffb878">Orange</option>
            <option value="#ff887c">Red</option>
            <option value="#dc2127">Bold red</option>
            <option value="#dbadff">Purple</option>
            <option value="#e1e1e1">Gray</option>
          </select>
    </div>

  </div>
  <div class="form-group">
    <div class="col-sm-offset-2 col-sm-10">
      <button type="submit" class="btn btn-primary">Записаться</button>
    </div>
  </div>
</form>
